# Database
# SQLite database file location (configured in prisma.config.ts)
# DATABASE_URL is set in prisma.config.ts as "file:./prisma/dev.db"

# OpenAI API Configuration
# Required: Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Application Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Optional: Email Configuration (for future features like review reminders)
# RESEND_API_KEY=re_your_resend_api_key
# FROM_EMAIL=noreply@yourdomain.com

# Optional: AWS S3 Configuration (for custom template storage)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# S3_BUCKET_NAME=sop-generator-templates

# Optional: Authentication (for future user management features)
# NEXTAUTH_SECRET=generate-with-openssl-rand-base64-32
# NEXTAUTH_URL=http://localhost:3000
